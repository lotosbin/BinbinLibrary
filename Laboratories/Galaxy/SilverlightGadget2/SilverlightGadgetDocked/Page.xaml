<UserControl x:Class="SilverlightGadgetDocked.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="130" Height="70" SizeChanged="UserControl_SizeChanged">
    <Border Background="Black" BorderBrush="Aquamarine" BorderThickness="1" CornerRadius="6">
        <StackPanel>
            <TextBlock Foreground="White" Text="Hello docked!"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            </TextBlock>
            <Button Width="70" Margin="0,5,0,0" Click="Button_Click" ClickMode="Press">
                <TextBlock Text="Flyout!" HorizontalAlignment="Center"></TextBlock>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
